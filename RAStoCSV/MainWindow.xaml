<Window x:Class="HirosakiUniversity.Aldente.RAStoCSV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HirosakiUniversity.Aldente.RAStoCSV"
        mc:Ignorable="d"
        Title="RAStoCSV" Height="450" Width="800">
	<Window.CommandBindings>
		<CommandBinding Command="{x:Static local:Commands.LoadCommand}"
										Executed="Load_Executed"/>
	</Window.CommandBindings>
	<Grid>
		<TabControl HorizontalAlignment="Left" Height="378" Margin="10,28,0,0" VerticalAlignment="Top" Width="772">
			<TabItem Header="ファイルを選択">
				<Grid Background="#FFE5E5E5">
					<Button Content="読み込む" HorizontalAlignment="Left" Height="61" Margin="49,38,0,0" VerticalAlignment="Top" Width="262"
						Command="{x:Static local:Commands.LoadCommand}"/>
				</Grid>
			</TabItem>
			<TabItem Header="フォルダを選択">
				<Grid Background="#FFE5E5E5"/>
			</TabItem>
		</TabControl>

	</Grid>
</Window>
